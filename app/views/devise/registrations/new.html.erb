<div class="border-form-div">
  <h2>sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { autocomplete: 'off' }) do |f|%>
    <%= devise_error_messages! %>
    <%= f.text_field :first_name, autofocus: true, placeholder: 'first name' %>
    <%= f.text_field :last_name, autofocus: true, placeholder: 'last name' %>
    <%= f.text_field :username, autofocus: true, placeholder: 'username' %>
    <%= f.email_field :email, autofocus: true, placeholder:'email' %>
    <%= f.password_field :password, placeholder: 'password' %>
    <%= f.password_field :password_confirmation, placeholder: 'password confirmation' %><br>
    <%= f.file_field :avatar %>
    <%= f.submit "sign up", class:"btn btn-md btn-success devise_button" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

